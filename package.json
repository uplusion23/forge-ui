{
  "name": "forge-ui",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "uplusion23",
    "url": "https://github.com/uplusion23"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "templates/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:cli": "turbo --filter=forge-ui build",
    "build:registry": "bun --filter=www build:registry && bun format:write",
    "dev": "turbo run dev --parallel",
    "cli:dev": "turbo --filter=forge-ui dev",
    "cli:start": "bun --filter=forge-ui start:dev",
    "docs:build": "bun --filter=www build:docs",
    "www:dev": "bun --filter=www dev",
    "www:build": "bun --filter=www build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "format:write": "turbo run format:write",
    "format:check": "turbo run format:check",
    "sync:templates": "./scripts/sync-templates.sh \"templates/*\"",
    "check": "turbo lint typecheck format:check",
    "release": "changeset version",
    "pub:beta": "cd packages/cli && bun run pub:beta",
    "pub:release": "cd packages/cli && bun run pub:release",
    "test": "turbo run test --force",
    "preview": "turbo --filter=www run preview",
    "deploy": "turbo --filter=www run deploy"
  },
  "dependencies": {
    "@babel/core": "^7.22.1",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@manypkg/cli": "^0.20.0",
    "@phosphor-icons/react": "^2.1.7",
    "@typescript-eslint/parser": "^5.59.7",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.9",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "3.13.1",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "3.4.15",
    "tailwindcss-animate": "^1.0.5",
    "tsx": "^4.1.4",
    "turbo": "^2.3.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^2.1.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.27",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.22",
    "@cloudflare/next-on-pages": "^1.13.5",
    "typescript": "^5.7.2"
  },
  "packageManager": "bun@1.1.38"
}
